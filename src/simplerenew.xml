<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5" method="upgrade">
    <name>COM_SIMPLERENEW</name>
    <author>OSTraining</author>
    <creationDate>November 24 2014</creationDate>
    <copyright>Copyright (C) 2014 OSTraining.com</copyright>
    <license>GPL v3</license>
    <authorEmail>info@simplerenew.com</authorEmail>
    <authorUrl>https://simplerenew.com</authorUrl>
    <version>0.3.1</version>
    <description>COM_SIMPLERENEW_COMPONENT_DESCRIPTION</description>

    <scriptfile>script.simplerenew.php</scriptfile>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install/mysql/install.sql</file>
        </sql>
    </install>

    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/install/mysql/uninstall.sql</file>
        </sql>
    </uninstall>

    <update>
        <schemas>
            <schemapath type="mysql" charset="utf8">sql/updates/mysql</schemapath>
        </schemas>
    </update>

    <media destination="com_simplerenew" folder="media">
        <folder>css</folder>
        <folder>images</folder>
        <folder>js</folder>
    </media>

    <files folder="site">
        <folder>controllers</folder>
        <folder>language</folder>
        <folder>models</folder>
        <folder>views</folder>
        <filename>controller.php</filename>
        <filename>simplerenew.php</filename>
    </files>

    <administration>
        <menu img="../media/com_simplerenew/images/icon-16-simplerenew.png">COM_SIMPLERENEW_ADMINMENU</menu>

        <files folder="admin">
            <folder>controllers</folder>
            <folder>language</folder>
            <folder>library</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>include.php</filename>
            <filename>simplerenew.php</filename>
        </files>
    </administration>

    <alledia>
        <element>simplerenew</element>
        <namespace>Simplerenew</namespace>
        <license>free</license>

        <obsolete>
            <folder>/administrator/components/com_simplerenew/views/dashboard</folder>
            <file>/administrator/components/com_simplerenew/controllers/test.php</file>
            <file>/administrator/components/com_simplerenew/library/configuration.json</file>
            <file>/administrator/components/com_simplerenew/library/simplerenew/Notify/Handler/None.php</file>
            <file>/administrator/components/com_simplerenew/sql/updates/mysql/0.045.sql</file>
            <folder>/components/com_simplerenew/views/change</folder>
            <file>/components/com_simplerenew/views/account/tmpl/login.php</file>
            <file>/components/com_simplerenew/views/renewal/tmpl/cancel.php</file>
            <file>/components/com_simplerenew/views/renewal/tmpl/multiple.php</file>
            <file>/components/com_simplerenew/views/renewal/tmpl/reactivate.php</file>
            <file>/media/com_simplerenew/js/tabs.js</file>
        </obsolete>
    </alledia>

    <updateservers>
        <server
            type="extension"
            priority="1"
            name="Simplerenew Updates"><![CDATA[https://deploy.ostraining.com/client/update/free/stable/com_simplerenew/extension.xml]]></server>
    </updateservers>

</extension>

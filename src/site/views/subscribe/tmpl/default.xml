    <fields name="params">
        <fieldset
            name="plans"
            label="COM_SIMPLERENEW_VIEW_SUBSCRIBE_PARAMS_PLANS_LABEL">

            <field
                name="plans"
                type="planaccess"
                label="COM_SIMPLERENEW_FIELD_PLANS_LABEL"
                format="[{code}] {name} {amount} {trial}"
                description="COM_SIMPLERENEW_FIELD_PLANS_DESC"
                class="checkbox"/>

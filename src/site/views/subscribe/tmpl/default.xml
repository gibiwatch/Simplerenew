            name="coupons"
            label="COM_SIMPLERENEW_VIEW_SUBSCRIBE_PARAMS_COUPONS_LABEL">

            <field
                name="couponAllow"
                type="list"
                label="COM_SIMPLERENEW_FIELD_COUPON_ALLOW_LABEL"

                type="menuitem"
                label="COM_SIMPLERENEW_FIELD_NEW_SUBSCRIPTION_REDIRECT_LABEL"
                description="COM_SIMPLERENEW_FIELD_NEW_SUBSCRIPTION_REDIRECT_DESC">

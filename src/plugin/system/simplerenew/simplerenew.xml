<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
    <name>plg_system_simplerenew</name>
    <author>OSTraining</author>
    <creationDate>December 16, 2014</creationDate>
    <copyright>Copyright (C) 2014 OSTraining.com</copyright>
    <license>GPL v3</license>
    <authorEmail>info@ostraining.com</authorEmail>
    <authorUrl>http://www.ostraining.com</authorUrl>
    <version>1.0.8</version>
    <description>plg_system_simplerenew_description</description>

    <files>
        <folder>language</folder>
        <filename plugin="simplerenew">simplerenew.php</filename>
    </files>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="planSync"
                    type="text"
                    label="PLG_SYSTEM_SIMPLERENEW_PLAN_SYNC_LABEL"
                    description="PLG_SYSTEM_SIMPLERENEW_PLAN_SYNC_DESC"
                    default="1"/>

                <field
                    name="revertSSL"
                    type="list"
                    label="PLG_SYSTEM_SIMPLERENEW_REVERT_SSL_LABEL"
                    description="PLG_SYSTEM_SIMPLERENEW_REVERT_SSL_DESC"
                    default="0">
                    <option value="0">JDISABLED</option>
                    <option value="1">JENABLED</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
